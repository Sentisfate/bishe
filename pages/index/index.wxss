.container{
  width: 100vw;
  height: 100vh;
  padding: 0;
}
.container map{
  position: relative;
  width: 100%;
  height: 100%;
  transition: all 0.5s;
}
/* 地图控件通用样式 */
.control{
  position: absolute;
  padding: 5px;
  background: white;
  box-sizing: border-box;
}
/* 定位按钮 */
.position-btn{
  bottom: 100rpx;
  right: 60rpx;
  width: 30px;
  height: 30px;
  box-sizing: border-box;
  border-radius: 50%;
  background: white;
}
/* 图层控制 */
.box{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  right: 10px;
  top: 40px;
  width: 40px;
  box-sizing: border-box;
  background: white;
  border-radius: 5px;
}
.box cover-image{
  padding: 2px;
  box-sizing: border-box;
}
.box cover-view{
  display: flex;
  flex-direction: column;
  justify-content: ceter;
  align-items: center;
  box-sizing: border-box;
  font-size: 12px;
  padding: 3px;
}

/* 通知 */
.message{
  top: 0px;
  left: 50%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  transform: translate(-50%,0);
  background-color: #ffe870;
}
.message cover-image{
  width:20px ;
  padding:0px 3px 0px 3px;
}
.message cover-view{
  flex:1;
  padding: 0px 5px 0px 5px;
}
.message .text-box{
  overflow: hidden;
}
.message .text{
  width: fit-content;
  animation: text-slide-in 10s infinite linear;
  white-space: nowrap;
}
@keyframes text-slide-in{
  from{
    margin-left:100%;
  }
  to{
    transform: translate(-100%,0);
    margin-left: 0;
  }
}